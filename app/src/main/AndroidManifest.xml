<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:name="com.project.emathinsayo.EmathInsayoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name="com.project.emathinsayo.presenter.SplashScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ReadMe">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.project.emathinsayo.presenter.BookAppActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"
            android:theme="@style/Theme.ReadMe" />

        <activity
            android:name="com.project.emathinsayo.presenter.OnBoardingActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"
            android:theme="@style/Theme.ReadMe" />

        <activity
            android:name="com.project.emathinsayo.presenter.RegisterActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"
            android:theme="@style/Theme.ReadMe" />

        <activity
            android:name="com.project.emathinsayo.presenter.StoryAndQuiz"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"
            android:theme="@style/Theme.ReadMe" />

        <activity
            android:name="com.project.emathinsayo.presenter.ExamResult"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"
            android:theme="@style/Theme.ReadMe" />

        <activity
            android:name="com.project.emathinsayo.presenter.WebviewActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"
            android:theme="@style/Theme.ReadMe" />
    </application>

</manifest>